{
  "manifest_version": 3,
  "name": "Autoscroll Flex",
  "version": "0.1",

  "description": "Adjustable autoscroll designed for reading manhwa and manga.",

  "icons": {
    "32": "icons/autoscroll-flex-logo-32.png",
    "64": "icons/autoscroll-flex-logo-64.png",
    "96": "icons/autoscroll-flex-logo-96.png"
  },

  "background": {
    "scripts": ["./dist/background.js"]
  },

  "action": {
    "default_popup": "./src/popup/popup.html"
  },

  "options_ui": {
    "page": "./src/options/options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./dist/content-script.js"]
    }
  ],

  "permissions" : [
    "activeTab", 
    "storage"
  ]
}